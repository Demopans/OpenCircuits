{
    "ts-node": {
        "esm": true,
        "files": true,
        "transpileOnly": true,
        // "swc": true, // For performance reasons, much faster transpiler
    },
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "allowJs": true,
        "module": "esnext",
        "target": "es2021",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": true,
        "declaration": false,
        "outDir": "../build/scripts"
    },
}
